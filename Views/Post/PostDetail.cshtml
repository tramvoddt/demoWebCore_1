@model demoWebCore_1.Models.ModelViews.Post
@{
    demoWebCore_1.IService.IPostService p = ViewBag.postService;

}
<style>
    * {
        color: #14352c
    }

    #comments::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */
    #comments::-webkit-scrollbar-track {
        box-shadow: inset 0 0 2px grey;
        border-radius: 10px;
    }

    /* Handle */
    #comments::-webkit-scrollbar-thumb {
        background: #9cc3b6;
        border-radius: 10px;
    }

        /* Handle on hover */
        #comments::-webkit-scrollbar-thumb:hover {
            background: #5c9a75;
        }

        #comments::-webkit-scrollbar-thumb:focus, :active {
            background: #5c9a75;
            cursor: grabbing
        }

    .drop:hover {
        cursor: pointer;
    }

    .drop > option {
        color: black !important;
    }

    .btn-redirect {
        background: white;
        font-weight: 700;
        color: #1d5735;
        transition: 0.4s all ease-out;
        height: 38px;
        border: none;
        border-radius: 20px;
    }

    img:hover {
        cursor: pointer
    }
    #btnSavePost {
        background: #eb6a46;
        font-weight: 700;
        color: white;
        transition: 0.4s all ease-out;
        float: right;
        height: 38px;
        border: none;
        border-radius: 0 15px 15px 0
    }
</style>
<div style="position: fixed; bottom: 65px; width: 95%; text-align: right;z-index:1">
    <button onclick="window.location.href='Post/Index'" style="border-radius: 50%; border: 5px solid rgb(125 175 152 / 0.43); background: #fff; padding: 18px 25px; font-size: 20px"><i class="fa fa-plus" style="pointer-events:none"></i></button>
</div>
<div class="container col-9" style="display:table;background: white; height: auto; min-height: 500px; margin: 7vh auto; border-radius: 20px; box-shadow: 0 0 40px 0 rgb(136 169 161 / 0.41); padding: 0">
    <div id="img" style="display:table-row;float:left; width:450px;height:100%;position:relative">
        <img src="@Url.Action("GetImageFile","Post",new {id=Model.id })" style="width:100%;height:100%;border-radius:20px 0 0 20px" />
    </div>
    @if (Model.url != "") { 
    <div class="action-url" style="display:none;width:450px;height:100%;position:absolute">
        <div style="bottom:20px;left:15px;position:absolute; float:right">
            <button id="redirect-@*@item.id*@" style="padding:0 10px;float:left" class="btn-redirect">
                <i style="pointer-events:none;margin-right:0.5vw;" class="fa fa-arrow-right"></i>
                @Model.url.Substring(8, 16)
            </button>
        </div>
    </div>
    }
    <div class="content" style="display:table-row;float:left; width:calc(100% - 450px);height:100%;padding:10px 20px">
        <div class="content" style="height:40px;margin:2vh 0">

            <button class="utilities" style="padding:12px 18px; background:#fff; border:none">
                <i class="fa fa-share" style="font-size:18px;pointer-events:none"></i>

            </button>
            <button class="utilities" style="padding: 12px 18px; background: #fff; border: none">
                <i class="fa fa-share" style="font-size:18px;pointer-events:none"></i>
            </button>
            <button class="utilities" style="padding: 12px 18px; background: #fff; border: none">
                <i class="fa fa-share" style="font-size:18px;pointer-events:none"></i>

            </button>

            <button  id="btnSavePost" class=" col-2" style="float:right;height:100%" onclick="SavePost(this.id)">Save</button>

            <select class="drop form-control  col-5 select" style=" float:right;color:black;height:100%;border-radius:15px 0 0 15px">
                <option style="color:black" value="-1">Choose</option>
                <option style="color:black" value="0">Create</option>
                @if (TempData["listCollect"] != null)
                {
                   foreach (var item1 in (List<demoWebCore_1.Models.ModelViews.Collect>)TempData["listCollect"])
                    {
                        if ((Model.collection_id == item1.id && Model.user_id == demoWebCore_1.Models.AuthRequest.id) || p.CheckChooseCollection(Model.id, item1.id))
                        {
                            <option style="color:black" selected="selected" value="@item1.id">@(item1.name)  - @(item1.status == true ? "Private" : "Public")</option>

                       }
                       else
                       {
                            <option style="color:black" value="@item1.id">@(item1.name)  - @(item1.status == true ? "Private" : "Public")</option>

                       }
                   }
                }
            </select>

        </div>

        <div>
            <h2>@Model.subject</h2>
            <h6>@Model.content</h6>
        </div>
        <h4 style="margin-top: 4vh">Comments:</h4>
        <div style="height:300px;overflow-y:scroll;cursor:grab;" id="comments">
           

        </div>
        <input type="text" />
    </div>
</div>