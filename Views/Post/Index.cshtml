@model List<demoWebCore_1.Models.Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<table class="table table-striped table-class col-lg-12" id="table-id">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Content</th>
        <th>Img</th>
        <th>Url</th>
        <th>Collection id</th>
        <th>Created At</th>
        <th>Status</th>
        <th>Action</th>

    </tr>
    @{int i = 1;
        foreach (var item in Model)
        {
            <tr>

                <td>@i @{i++;}</td>
                <td>@item.subject</td>
                <td>@item.content</td>
                <td>@item.img</td>
                <td>@item.url</td>
                <td>@item.colection_id</td>
                <td>@item.created_at.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.status == true ? "Activated" : "Deactivated")</td>
                <td>
                    <a href="#" class="action-icon" style="background: linear-gradient(to right, #f8dd6a, #edc621); padding: 5px 5px 5px 10px; ">
                        <i class="fa fa-edit"></i>
                    </a>
                    <br />
                    <a href="#" class="action-icon" style="background: linear-gradient(to left,#ed3021,#f66d63); padding: 4.5px 9px ">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

    }
</table>