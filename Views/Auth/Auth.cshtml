@model demoWebCore_1.Models.ModelViews.Users
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    string user="", pass = "";
    if (TempData["user"] != null)
    {
        user = TempData["user"].ToString();
        pass = TempData["pass"].ToString();
    }
    
    if (TempData["type-auth"].ToString() == "login")
    {
        ViewBag.Title = "Login";


    <div class="text-center" style="background:yellow;min-height:100px;">
        <form action="@Url.Action("ClientLogin","Auth")" method="post" class="container form-signup" style=" margin-top:5vh;min-height:350px;">

            <i class="fa fa-lock container" style="color: #dd5b36; text-align: center; font-size: 30px; margin-top: 5vh; "></i>

            <h3 class="container" style="color:#993829;text-align:center; margin-bottom:5vh;">Sign In</h3>
            @if (TempData["Message"] != null)
            {
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

                <label class="alert alert-success container mb-2 col-lg-12" id="msg">
                    @TempData["Message"]
                </label>
                TempData["Message"] = null;
                <script type="text/javascript">
                    $("#msg").delay(2000).fadeOut(300);
                </script>

            }
            <input class="inputType col-lg-12  contaiter" placeholder="email / phone" name="username" type="text" value="@user" />
            <input class="inputType col-lg-12  contaiter" placeholder="password" name="psw" type="password" value="@pass" />
            <button type="submit" class="btnSignup col-lg-12" style="padding:10px 12px">Login</button>
            <a href="@Url.Action("Auth", "Auth",new  {type="sign-up" })" style="color:#993829;text-decoration:underline;font-size:13px;" class="container col-lg-12">Do not have an account?</a>
            @if (TempData["ErrorLogin"] != null)
            {
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                <label class="alert alert-danger container mt-2" id="msgerror">
                    @TempData["ErrorLogin"]
                </label>
                TempData["ErrorLogin"] = null;
                <script type="text/javascript">
                    $("#msgerror").delay(2000).fadeOut(300);
                </script>

            }



        </form>

       
    </div>
    }
    if (TempData["type-auth"].ToString() == "sign-up")
    {
        ViewBag.Title = "Sign Up";

        using (Html.BeginForm("SignUpAction", "Auth", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <div class="container form-signup" style=" margin-top:1vh">
                <h3 class="container" style="color:#993829;text-align:center; padding-top:2vh">Sign Up</h3>

                @Html.TextBoxFor(d => d.name, new { @class = "inputType col-lg-12  contaiter ", @type = "text", @placeholder = "name" })
                @Html.ValidationMessageFor(d => d.name, "", new { @class = "_error  col-lg-12  contaiter" })

                @Html.TextBoxFor(d => d.email, new { @class = "inputType col-lg-12  contaiter ", @type = "text", @placeholder = "email" })
                @Html.ValidationMessageFor(d => d.email, "", new { @class = "_error  col-lg-12  contaiter" })

                @Html.TextBoxFor(d => d.phone, new { @class = "inputType col-lg-12  contaiter ", @type = "text", @placeholder = "phone" })
                @Html.ValidationMessageFor(d => d.phone, "", new { @class = "_error  col-lg-12  contaiter" })

                @Html.TextBoxFor(d => d.password, new { @class = "inputType col-lg-12  contaiter ", @type = "password", @placeholder = "password" })
                @Html.ValidationMessageFor(d => d.password, "", new { @class = "_error  col-lg-12  contaiter" })
                <div class="container  col-lg-12">
                    <button type="submit" class="btnSignup col-lg-12">Sign Up</button>
                    <a href="@Url.Action("Auth","Auth",new { type = "login" })" style="color:#993829;text-decoration:underline;font-size:13px;" class="container col-lg-12">Already have an account? Log in now.</a>

                </div>

            </div>
        }
    }
}
