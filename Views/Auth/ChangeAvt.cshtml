    $("#btnRead").click(function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetPost","Post",new {id=18 })",

            success: function (data) {
                $("#txtSubject").val(data.subject),
                    $("#imgViewer").attr("src", "data:image/ipg;base64," + data.img + "")
            },
            error: function () {
                console.log("error")
            }
        });
    });
    </script>
